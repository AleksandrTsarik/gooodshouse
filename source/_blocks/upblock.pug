#reviews.upblock.js-upblock
	.upblock__wrapper
		.upblock__close.js-upblock-close
		.upblock__title Написать отзыв
		.upblock__body.js-val-container
			.upblock__body-wrapper
				+formField({type:'input', mode:'name', placeholder:'Имя'})
				+formField({type:'input', mode:'email', placeholder:'E-mail'})
			.upblock__body-wrapper
				.upblock__body-row
					.upblock__body-column Ваша оценка
					.upblock__body-column
						+stars({rating:1, name:'reviewsRating'})
			.upblock__body-wrapper
				+formField({type:'textarea', mode:'review', placeholder:'Отзыв'})

			.upblock__body-button Оставить отзыв

