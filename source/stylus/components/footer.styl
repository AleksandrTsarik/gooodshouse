.footer
	padding-top: 50px
	// @media $phone
	// 	background $backBackground
	&__wrapper
		padding 48px 0 75px
		display flex
		border-top 1px solid $grey
		@media $desktop
			justify-content: space-between
		@media $tablet
			flex-direction column
			padding 23px 0 35px
	&__links
		display: flex
		padding-bottom: 15px;
		@media $tablet
			order: 2
			flex-wrap: wrap
	&__links-column
		margin-right: 85px
		@media  $desktop
			margin-right: 30px
		@media $tablet
			flex-grow: 1
			padding-top: 22px;
			min-width 135px
		&:last-child
			@media $tablet
				margin-right: 0
	&__links-item
		font-size 15px
		line-height 32px
		font-weight: 600
		a
			color $baseFont
			&:hover
				color $linkFont
	&__links-item--agreement
		margin-top: auto
	&__links-item--agreement-desktop
		@media $tablet
			display: none
	&__links-item--agreement-mobile
		display: none
		@media $tablet
			display: block
			order 4
			border-top 1px solid $grey
			margin-top: 17px;
			padding-top: 17px;
	&__caption
		font-family $MuseoM
		font-size: 15px;
		line-height: 35px;
		text-transform uppercase
		margin-bottom: 12px;
	&__phone
		font-family $MuseoM
		font-size: 24px;
		font-weight: 600;
		text-align right
		text-transform uppercase
		white-space nowrap
		@media  $desktop
			font-size: 18px
		@media $tablet
			padding 28px 0 0px 45px
			text-align: left
	&__subscribe
		margin-left: auto
		display: flex
		flex-direction: column
		@media $desktop
			margin-left 0
		@media $tablet
			order: 1
			//margin-left: 0
			border-bottom 1px solid $grey
			padding-bottom: 21px;
	&__direction
		display: flex
		flex-direction: column
		margin-left: 74px
		justify-content: space-between
		@media  $desktop
			margin-left: 40px;
		@media $tablet
			order: 3
			margin-left: 0
			border-top 1px solid $grey
			margin-top: 12px;
	&__social
		//margin-top: auto
		display flex
		justify-content flex-end
		padding-bottom 11px
		@media $tablet
			padding 30px 0 11px
			justify-content flex-start
		@media $phone
			padding 30px 0 11px
	&__social-item
		width 26px
		height 26px
		margin 0 6px
		cursor pointer
		@media $tablet
			margin 0 12px 0 0
		&--vk
			background url('../img/icon-vk.svg') no-repeat left top
		&--ig
			background url('../img/icon-ig.svg') no-repeat left top
		&--fb
			background url('../img/icon-fb.svg') no-repeat left top
		&--yd
			background url('../img/icon-yd.png') no-repeat left top
		&--dz
			background url('../img/icon-dz.svg') no-repeat left top
		&--telegram
			background url('../img/icon-telegram.svg') no-repeat left top
		&:last-child
			margin-right 0
.b-icon__phone
	position: relative
	&:after
		content ''
		position absolute
		left -45px
		top -2px
		width 36px
		height 36px
		border-radius 50%
		background url('../img/contacts/icon-phone.svg') no-repeat center center $linkFont
		@media $tablet
			left: 0
			top: 22px
		@media $phone
			top: 22px
.b-icon__whatsapp
	position: relative
	&:after
		content ''
		position absolute
		left -45px
		top -4px
		width 36px
		height 36px
		background url('../img/contacts/icon-wp.svg') no-repeat 50% 75%
		background-size: cover
		@media $tablet
			left: 0
			top: 22px
		@media $phone
			top: 22px
.b-icon__telegram
	position: relative
	&:after
		content ''
		position absolute
		left -45px
		top -4px
		width 36px
		height 36px
		background url('../img/contacts/icon-telegram.svg') no-repeat 50% 75%
		background-size: cover
		@media $tablet
			left: 0
			top: 22px
		@media $phone
			top: 22px
			
