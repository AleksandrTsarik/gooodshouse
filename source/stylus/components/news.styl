.b-promo-card
	flex: 0 0 33.333%
	max-width: 33.333%
	transition 0.3s
	&__image
		img
			width: 100%
	&:hover .b-promo-card__title
		color $linkFont
	&__title
		font-weight: normal
		font-size: 16px
		line-height: 24px
		color: $baseFont
		padding-top 15px
		@media $tablet
			padding-top 5px
.b-promo-list
	display: flex
	flex-wrap: wrap
	margin: 0 -10px
	&__item
		flex: 0 0 33.333%
		max-width: 33.333%
		padding: 30px 10px
		@media $tablet
			flex: 0 0 50%
			max-width: 50%
			padding: 10px 10px
		@media $phoneS
			flex: 0 0 100%
			max-width: 100%

.b-news-block
	display: flex
	height: 490px
	margin-bottom 30px
	@media $tablet
		flex-wrap: wrap
		height: auto
	&__info
		display: flex
		flex-direction: column
		flex: 0 0 32%
		max-width: 32%
		background $linkFontlight
		color: $white
		padding: 0 60px 0 75px
		justify-content: center
		@media $desktop
			padding: 0 20px 0 30px
		@media $tablet
			flex: 0 0 100%
			max-width: 100%
			order: 2
			padding: 0 20px
	&__name
		font-weight: 300
		font-size: 16px
		line-height: 24px
		padding-bottom 45px
		@media $tablet
			padding-bottom 20px
			padding-top 20px
	&__offer
		font-weight: normal
		font-size: 24px
		line-height: 34px
		margin-bottom 55px
		@media $tablet
			margin-bottom 30px
	&__details
		@media $tablet
			margin-bottom 40px
		a
			color: $white
			border: solid 1px $white
			border-radius: 3px
			padding: 11.5px 41px
			font-size: 14px
			transition: 0.3s
			&:hover
				background $white
				color: $linkFontlight
	&__img
		flex: 0 0 68%
		max-width: 68%
		background-image url('./../../f/img/content/promo-5.jpg')
		background-repeat: no-repeat
		background-size: cover
		background-position: 50% 50%
		@media $tablet
			flex: 0 0 100%
			max-width: 100%
			order: 1
			min-height: 300px