//------b-order-result-----//
.b-order
	&-item
		&__column
			&:nth-child(1)
				flex: 0 0 14.5%
				max-width: 14.5%
				padding-right 2%
				position: relative
				@media $desktop
					flex: 0 0 20%
					max-width: 20%
				@media $tablet
					flex: 0 0 14.5%
					max-width: 14.5%
				@media $phone
					flex: 0 0 26%
					max-width: 26%
					padding-right 0
					display: flex
					justify-content: center
			&:nth-child(2)
				flex: 0 0 48.7%
				max-width: 48.7%
				@media $desktop
					flex: 0 0 80%
					max-width: 80%
				@media $tablet
					flex: 0 0 48.7%
					max-width: 48.7%
				@media $phone
					flex: 0 0 74%
					max-width: 74%
			&:nth-child(3)
				flex: 0 0 14%
				max-width: 14%
				@media $desktop
					padding-left 20%
					padding-right 2%
				@media $tablet
					padding 0
				@media $phone
					padding-left 26%
					padding-right 2%
					flex: 0 0 14%
					max-width: 14%
				@media $afterPhoneS
					padding 10px 0 10px 26%
					flex: 0 0 100%
					max-width: 100%
			&:nth-child(4)
				flex: 0 0 22.4%
				max-width: 22.4%
				@media $desktop
					flex: 0 0 65%
					max-width: 65%
					padding-left 14%
				@media $tablet
					flex: 0 0 22.4%
					max-width: 22.4%
					padding-left 0
				@media $phone
					flex: 0 0 65%
					max-width: 65%
					padding-left 18%
				@media $afterPhoneS
					padding-left 26%
					flex: 0 0 100%
					max-width: 100%
			&:nth-child(5)
				width: 0.2%
				position: absolute
				top: 50%
				transform: translateY(-50%)
				right: 0
				width: 15px
				height: 15px
				@media $afterPhoneS
					top: 70%
					right: auto
					left: 11.2%
					.b-order__cross
						background-image: url('../img/ico-order-basket.svg')
						background-position: 50% 50%
						background-repeat: no-repeat
						background-size: 100%
						&:after,&:before
							content: ''
							display: none
				@media screen and (max-width: 400px)
					left: 10.5%

	&-result
		&__row
			&:nth-child(4)
				border-bottom: solid 1px rgba($baseFont, 0.4)
				padding 38px 0 38px
				margin-bottom 30px
			&:nth-child(9)
				margin-top 20px
			.b-order-step__btn
				width: 100%
				button
					width: 100%
					padding-left 0
					padding-right 0
		&__choice
			display: flex
			align-items: center
			.b-order-price__label
				padding-left 21px
				margin-right 45px
		&__bonus
			width: 100%
			margin: 20px 0
			&-label
				position: relative
			&-input
				background: $white
				border: 1px solid $selectDarken
				box-sizing: border-box
				border-radius: 5px
				font-weight: 300
				font-size: 16px
				letter-spacing: -0.015em
				padding: 15px
				position: relative
				&:placeholder
					color: $selectDarken
			&-ico
				background-image: url('../img/ico-arrow-link.svg')
				background-position: 50% 50%
				background-repeat: no-repeat
				background-size: 100%
				transform: rotate(180deg)
				position: absolute
				right: 12px
				top: 6px
				width: 18px
				height: 7px
				cursor: pointer
			&-ico--del
				width: 8px
				height: 8px
				position: absolute
				right: 12px
				top: 6px
				display: block
				cursor: pointer
				&:after
					content: ''
					width: 100%
					height: 2px
					background: $baseFont
					transform: rotate(45deg)
					position absolute
					top: 0
					left: 0
				&:before
					content: ''
					width: 100%
					height: 2px
					background: $baseFont
					transform: rotate(-45deg)
					position absolute
					top: 0
					left: 0
			&-row
				display: flex
				align-items: center
				b
					margin: 0 0.3em
				a
					display: inline-block
					background: $linkFont
					width: 15px
					height: 15px
					border-radius: 50%
					margin-bottom -2px
					margin-left 5px
					position: relative
					z-index 0
					margin-top -2px
					img
						position: absolute
						z-index 5
						top: 0
						left: 0
						right: 0
						bottom: 0
						margin: auto
		&__sale
			font-size: 16px
			letter-spacing: -0.015em
			a
				margin-right 0.3em
				transition: 0.3s
				&:hover
					text-decoration: underline
