		&--aside
			padding: 0 10px
	&__block
		display none
		padding-top 13px
		&.is-show
			display block
	&__block-title
		font-family $MuseoM
		font-size 16px
		line-height 1.5
		letter-spacing -0.015em
		padding-bottom 2px
	&__block-desc
		font-family $MuseoM
		color $specsOrange
		padding-bottom 16px
		span
			color $specsGrey
	&__goods
		border-top 1px solid $backFont
		margin-top 10px
	&__controls
		padding-top 44px
		display flex
		align-items center
		@media $desktop
			flex-direction column
			align-items flex-start
		@media $tablet
			display none
	&__button
		min-width 320px
		width 320px
	&__legend
		font-family $MontserratR
		font-size 12px
		line-height 20px
		letter-spacing -0.015em
		padding-left 47px
		@media $desktop
			padding-left 0
			padding-top 20px
			width 320px
		a
			text-decoration underline
			color $specsOrange
			&:hover
				text-decoration none
				color $hoverFont
.b-order-step
	@media $tablet
		position: static
		&:nth-child(1)&:before
			display: none
			height: 0
		&:nth-child(2)&:before
			display: none
		&:before
			content: ''
			width: 100%
			position: absolute
			left: 0
			right: 0
			height: 2px
			background: rgba($baseFont, 0.4)
			//margin: 0 -15px

	&-strip
		padding: 0
	&__error
		display: flex
		align-items: center
		background: $tomato
		color: $white
		padding: 10px 15px
		font-size: 18px
		letter-spacing: -0.015em
		text-transform: lowercase
		margin: 13.5px 0
		img
			display: block
			margin-bottom 1px
			margin-right 13px
	&--style
		width: 74%
		margin-top 50px
		.b-field--sort
			margin: 0
		@media $afterPhoneS
			width: 100%
		.b-field__caption
			background: $white
			border-bottom: solid 1px $selectDarken
			padding-bottom 37px
			color: $selectDarken
			font-size: 16px
			line-height: 22px
			border-radius: 0
			padding-left 0
			&:after
				content: ''
				border-color: rgba($baseFont, 0.4)
		.b-field__options
			background: $white
			box-shadow: 0px 3px 4px rgba(0, 0, 0, 0.15)
			padding: 30px
			max-height: none
			overflow: auto
			overflow-y: auto
			line-height: 50px
		.b-field__item
			font-size: 16px
			line-height: 34px
			color: $baseFont
		.b-catalog-sort__box-row
			font-size: 14px
			line-height: 17px
			color: $orangeL
	&__btn
		margin-top 56px
		button
			color: $white
			background: $linkFont
			border-radius: 5px
			padding: 15px 90px
			text-transform: lowercase
			font-size: 18px
			align-items: center
			letter-spacing: -0.015em
			transition: 0.3s
			 
			@media $afterPhoneS
				padding: 15px 0
				width: 100%
			&:hover
				background: lighten($linkFont, 15%)
				//box-shadow: 0 0 10px rgba(black, 0.8)inset
.b-order
	&-address
		&__label
			position: relative
		&__input
			font-weight: bold
			font-size: 16px
			line-height: 22px
			padding: 0 14px 14px 0
			&::placeholder
				font-weight 300
		&__place
			margin-top 30px
	&__cross
		position: absolute
		cursor: pointer
		width: 15px
		height: 15px
		display: block
		right: 0
		top: 0
		&:after
			content: ''
			width: 100%
			height: 1px
			background: $selectDarken
			transform: rotate(45deg)
			position: absolute
			left: 0
			top: 7.5px
		&:before
			content: ''
			width: 100%
			height: 1px
			background: $selectDarken
			transform: rotate(-45deg)
			position: absolute
			left: 0
			top: 7.5px
		&--mobile
			display: none
			@media $phone
				display: block
				position: absolute
				left: 50%
				transform: translateX(-50%)
				bottom: 0
	&-delivery
		display: flex
		@media $afterPhoneS
			flex-wrap: wrap
		&__item
			width: 300px
			height: 100px
			display: flex
			justify-content: center
			align-items: center
			border: solid 1px $backBackground
			cursor: pointer
			margin-right 20px
			transition: 0.2s
			&:hover
				border-color: $linkFont
			&.is-active
				border-color: $linkFont
			@media $afterPhoneS
				width: auto
				flex: 0 0 100%
				max-width: 100%
				margin: 10px 0
		&__text
			font-size: 16px
			//line-height: 34px
			letter-spacing: -0.015em
			&:nth-child(1)
				color: $baseFont
			&:nth-child(2)
				color: $selectDarken
			&:nth-child(3)
				color: $green
.b-order-step
	&:nth-child(3)
		//margin-bottom 15px
		@media $tablet
			margin-bottom 15px
	&:nth-child(4)
		//padding-bottom 40px
		padding-bottom 30px
	&:nth-child(5)
		margin-bottom 35px
		@media $tablet
			margin-bottom 15px
.b-order-item
	&--disabled
		opacity 0.5
	&__row
		display: flex
		justify-content: space-between
		border-bottom: solid 1px $borderLight
		padding: 18px 0
		position: relative
		align-items: center
		@media $desktop
			flex-wrap: wrap
			justify-content: flex-start
	&__image
		padding-left 10px
		@media $desktop
			padding-left 20px
		@media $phone
			padding-left 0
			margin-bottom 19px
		img
			display: block
			margin: 0 auto
	&__input
		appearance none
		-webkit-appearance: none
		-moz-appearance: none
		width: 1px
		height: 1px
		position: absolute
	&__check
		width: 18px
		height: 18px
		background: #FFFFFF
		border: 1px solid $backFont
		border-radius: 3px
		display: block
		margin-right 8px
		position: absolute
		left: 0
		top: 50%
		transform: translateY(-50%)
		z-index 5
		@media $phone
			left: 50%
			top: 100%
			transform: translate(-50%, 0)
	&__input:checked + &__check
		background: $linkFont
		border-color: $linkFont
		background-image: url('../img/icon-check.svg')
		background-size: 80%
		background-position: 50% 50%
		background-repeat: no-repeat

	&__column
		position: relative
	&__subtitle
		font-weight: 300
		color: $selectDark
		font-size: 12px
	&__article
		color: $selectDark
		font-size: 14px
		letter-spacing: -0.015em
	&__title
		font-size: 14px;
		line-height: 20px;
		color: $baseFontLight
		a
			color: $baseFontLight

	&__counter
		width: 85px
		//height: 35px
		display: flex
		align-items: center
		border: solid 1px $backFont
		border-radius: 3px
		padding: 5px 0
		&-label
			font-size: 14px
			border-bottom: none
			flex: 0 0 33.333%
			max-width: 33.333%
			input[type="tel"]
				border-bottom: none
				//text-align: center
		&-btn
			font-size: 16px
			flex: 0 0 33.333%
			max-width: 33.333%
	&__price-block
		display: flex
		align-items: center
		margin-bottom 5px
	&__price
		font-size: 16px
		letter-spacing: -0.015em
		color: $baseFont
		margin-right 13px
		white-space: nowrap
	&__oldprice
		font-weight: 300
		font-size: 16px
		letter-spacing: -0.015em
		text-decoration-line: line-through
		color: $selectDarken
		white-space: nowrap
	&__shop,&__delivery
		font-size: 14px
		line-height: 17px
		letter-spacing: -0.015em
		position: relative
		padding-left 11px
		&:after
			content: ''
			width: 4px
			height: 4px
			display: block
			border-radius: 50%
			position: absolute
			left: 0
			top: 0.5em
			//transform: translateY(-50%)
			background: $baseFont
	&__shop
		color: $green
	&__delivery
		color: $tomato

//-----style input-radio
.b-order-price__label
	position: relative
	padding-left 30px
	display: flex
.b-order-price__input
	appearance none
	-webkit-appearance: none
	-moz-appearance: none
	width: 1px
	height: 1px
	position: absolute
.b-order-price__check
	width: 12px
	height: 12px
	border-radius: 50%
	border: solid 2px $selectDarken
	display: block
	position: absolute
	top: 50%
	transform: translateY(-50%)
	left: 0
