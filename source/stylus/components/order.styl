		@media $phone
			width 100%
	&__label
		font-family $MontserratR
		font-size 12px
		line-height 1.67
		letter-spacing -0.015em
		padding-top 28px
		a
			color $specsOrange
			text-decoration underline
			&:hover
				color $hoverFont
				text-decoration none

.b-order-step
	&__input-form
		.b-form-field__wrapper
			border: none
			border-bottom: solid 1px $selectDarken
			padding: 0
			height: auto
			border-radius: 0
			textarea
				min-height: 0
				padding: 0
		.b-order-step__column-textarea
			width: 100%
	&__wrapper
		padding 10px 0 40px
		&-bb
			border-bottom: solid 1px $selectDarken
			//padding-bottom 75px
			@media $tablet
				border: none

	&__title
		font-family $MuseoM
		font-size 24px
		line-height 1
		letter-spacing -0.015em
		//padding-bottom 18px
		padding: 35px 0 35px
		a
			font-size 14px
			color $specsOrange
			text-decoration underline
			margin-top 3px
			float right
			&:hover
				color $hoverFont
				text-decoration none
	&__row
		display flex
		justify-content space-between
		@media $phone
