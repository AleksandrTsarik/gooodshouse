.b-order
	input[type="text"]
		width: 100%
		border-bottom: solid 1px $selectDarken
	&__wrapper
		padding 10px 0 100px
		@media $tablet
			padding-bottom 75px
	&__row
		display flex
		justify-content space-between
		@media $tablet
			flex-direction column
	&__column
		width 66%
		@media $desktop
			width 59%
		@media $tablet
			width 100%
		&:nth-child(2)
			width 30.8%
			@media $desktop
				width 37%
			@media $tablet
				width 100%

.b-order-result
	// &__table
	// 	display table
	// 	width 100%
	&__wrapper
		background $sub
		padding 40px 32px
		@media $phone
			display block
			padding 25px 15px
	&__row
		//display table-row

		display: flex
		justify-content: space-between
		align-items: center
	// &__column
	// 	display table-cell
	// 	vertical-align middle
	// 	&:nth-child(1)
	// 		width 80%
	&__title
		font-family $MuseoR
		font-weight bold
		// font-size 24px
		// line-height 29px
		letter-spacing -0.015em
		white-space nowrap
		// padding 27px 10px 27px 0
		font-weight: bold
		font-size: 18px
		line-height: 21px
		//padding 38px 0 38px
		@media $phone
			font-size 18px
		&--border
			border-bottom 1px solid $backFont
			padding 0 10px 28px 0
			margin-bottom 21px
	&__title-desc
		font-family $MuseoM
		font-size 14px
		line-height 20px
		letter-spacing -0.015em
		white-space nowrap
		padding 27px 10px 27px 0
		&--border
			border-bottom 1px solid $backFont
			padding 0 10px 28px 0
			margin-bottom 21px
		a
			display inline-block
			vertical-align top
			color $specsOrange
			text-decoration underline
			&:hover
