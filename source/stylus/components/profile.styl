	&__desc
		max-width 533px
		font-size 14px
		line-height 1.6
		letter-spacing -0.015em
		padding-bottom 30px
		a
			color $orange
			text-decoration underline
			&:hover
				color $hoverFont
				text-decoration none
	&__table
		display table
		border 1px solid $backBackground
		border-radius 3px
	&__row
		display table-row
	&__row:last-child &__column
		border-bottom none
	&__column
		display table-cell
		font-family $MuseoM
		font-size 14px
		line-height 1.2
		letter-spacing -0.015em
		border-bottom 1px solid $backBackground
		padding 16px 10px 16px 20px
		&:nth-child(2)
			padding 16px 20px 16px 0
			color $orange
	&__info
		max-width: 300px
		font-size: 26px
		color: rgba($baseFont, 0.4)
		border-bottom: 1px solid rgba(94, 47, 38, 0.2)
		padding-bottom 20px
		margin-bottom 20px
		&--numb
			font-weight 700
			font-size: 30px
			padding-right 5px
			color $baseFont
	&-info
		&__row
			font-size: 16px
			&--munb
				font-size: 18px
				padding-left 5px
				color: $baseFont
				font-weight 700
		&__text
			font-size: 16px
			color: $baseFont
		&__link
			font-size: 16px
			color: $baseFont
			padding-top 1em
			a
				color: $linkFont
				text-decoration: underline

.ui-datepicker-calendar
	background: $white
	border: solid 1px $gray
	thead
		display: inline-table
		width: 100%
	tbody
		display: inline-table
		width: 100%
.ui-datepicker-header
	background: $white
.ui-datepicker table
	margin 0
	display: block
.ui-widget-header
	border: solid 1px $gray
	border-radius: 0
.ui-datepicker
	min-width 300px



