.b-profile
	&__wrapper
		padding 13px 0 152px
		@media $tablet
			padding 0 0 80px
	&__row
		display flex
		@media $tablet
			flex-direction column
	&__column
		width 25.5%
		@media $tablet
			width 100%
		&:nth-child(2)
			flex-grow 1
	&__block
		display none
		&.is-show
			display block
	&__title
		padding 5px 0 27px
		font-size 18px
		line-height 1.23
		letter-spacing -0.015em
		@media $tablet
			display none
	&__step
		max-width 403px
		padding-bottom 9px
	&__step-title
		font-family $MontserratR
		font-size 14px
		line-height 1.2
		letter-spacing -0.015em
		padding 13px 0 0
		margin-bottom -4px
	&__button
		margin-top 14px
		background $gray
	&-step
		&__lk
			// .b-form-field__wrapper.is-locked, .b-form-field__input, .is-done
			// 	background: white
			max-width: 300px
			padding-bottom 0
			.b-form-field__wrapper
				border: none
				border-bottom: 1px solid rgba(94, 47, 38, 0.2)
				border-radius: 0
				padding-left 0
				padding-top 15px
				margin: 0
				.b-form-field__input
					position: relative
				.ui-datepicker-trigger
					position: absolute
					right: 0
					top 30px
					cursor: pointer

			.btn
				width: 100%
				background: $hoverFont
				color: $white
				border: none
				transition: 0.3s
				height: auto
				line-height: 1em
				font-size: 18px
				padding: 16px 0
				&:hover
					background: lighten($hoverFont, 15%)

.b-profile-menu
	@media $phone
		max-width calc(100% + 30px)
		margin 0 -15px
		overflow hidden
		overflow-x scroll
	&__wrapper
		@media $tablet
			display flex
			margin-bottom 20px
			border-bottom 1px solid $backFont
		@media $phone
			padding 0 15px
			min-width 720px
	&__item
		position relative
		font-size 16px
		line-height 1.2
		padding 8px 0px 7px
		cursor pointer
		@media $tablet
			margin-right 20px
			&:last-child
				margin-right 0
		&:hover
			color $hoverFont
			@media $tablet
				color $baseFont
		&.is-active
			color $hoverFont
			@media $tablet
				&:after
					content ''
					position absolute
					left 0
					right 0
					bottom -1px
					height 1px
					background $orange
		a
			color inherit

.b-profile-card
	&__wrapper
		position relative
		padding 5px 0
		max-width: 300px
		@media $phone
			padding 240px 0 5px
		@media screen and (max-width: 349px)
			padding-top 69vw
