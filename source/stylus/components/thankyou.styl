.b-thankyou
	&__wrapper
		padding 10px 0 100px
		@media $tablet
			padding 10px 0 60px
		@media $phone
			padding 10px 0 50px
	&__title
		font-family $MuseocyrM
		font-size 20px
		line-height 1.2
		padding 0 0 20px
	&__desc
		font-size 16px
	&__label
		padding-top 30px
		@media $phone
			padding-top 15px
	&__controls
		display flex
		padding 25px 0 10px
		margin-top 40px
		@media $phone
			padding 0 0 10px
			flex-direction column
	&__button
		margin-right 10px
		padding 0 25px
		color $white
		@media $phone
			margin-bottom 10px