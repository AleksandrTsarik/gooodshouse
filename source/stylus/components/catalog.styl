.catalog-block--open,
.b-catalog-submenu__item--open
	position: absolute
	top: 50%
	transform: translateY(-50%)
	right: 5px
	cursor: pointer
	&:before
		content: '+'
.js-catalog-block.is-open .catalog-block--open&:before
	content: '-'
.b-catalog-submenu__block.is-open .catalog-submenu__item--open&:before
	content: '-'
.b-catalog-menu__item
	position: relative
	font-style: normal
	font-weight: bold
	font-size: 18px
	text-transform: uppercase
	border-top: solid 1px $backBackground
	@media $phone
		padding: 0 15px
	a
		position relative
		color: $baseFont
		display: block
		padding: 16px 0
.b-catalog-submenu__item
	font-weight: bold
	font-size: 16px
	text-transform: none
	&:last-child
		padding-bottom 20px
	a
		color: $baseFont
		padding: 6.5px 0
.b-catalog-submenu-sub
	visibility: hidden
	opacity: 0
	transition: .3s
	height: 0
	li
		font-size: 14px
		padding-left 15px
		font-weight normal
		a
			color: $baseFont
			transition: 0.3s
			&:hover
				color: $linkFont
.b-catalog-submenu
	visibility: hidden
	height: 0
	opacity 0
.b-catalog-menu__item
	.js-catalog-block.is-open
		.b-catalog-submenu
			visibility: visible
			opacity 1
			height: auto
			transition: 0.3s
			//padding-top 10px
.b-catalog-submenu__item
	.js-catalog-block.is-open
		.b-catalog-submenu-sub
			visibility: visible
			opacity 1
			height: auto
.page__catalog__link-more
	margin: 0 auto
	text-align: center
	display: none
	@media $phoneS
		display: block
		margin-top 15px
	a
		color: $blue
		border: 1px solid $blue
		border-radius: 3px
		font-size: 14px
		padding: 12px 0
		display: block
		transition: 0.3s
		&:hover
			color: $white
			border: 1px solid $blue
			background: $blue
.page-catalog__offer
	background-image: url(../../f/img/catalog-offer.png)
	background-position: 50% 50%
	background-repeat: no-repeat
	//background-size: cover
	text-align: center
	color: $white
	padding: 50px 0 40px
	display: none
	@media $phoneS
		display: block
		background-size: cover
		margin: 50px -15px 0
	&-text
		font-size: 20px
	&-btn
		margin-top 20px
		a
			color: $white
			border: solid 1px $white
			font-size: 14px
			padding: 11px 50px
			border-radius: 3px
.b-catalog__filter-sort
	display: flex
	align-items: center
	margin-top 25px
	margin-bottom 35px
	@media $phone
		display: none
	&__link
		margin-right 10px
		a
			color: $baseFont
			font-size: 16px
			font-weight 400
			transition: 0.3s
			&:hover, &:active
				color: $hoverFont
		&.is-active
			a
				color: $hoverFont

.b-field--link
	.b-field__label
		display: block
		font-size: 16px
		font-weight 400
		color: $baseFont
		transition: 0.3s
		margin-bottom 15px
		&:hover, &:active
			color: $hoverFont
		&.is-active
			color: $hoverFont
