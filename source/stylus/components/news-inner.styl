.b-news-inner
  &__title
    position: relative
    font-weight: normal;
    font-size: 32px;
    line-height: 39px;
    color: $baseFontLight
    padding-bottom 40px
    @media $tablet
      padding-bottom 20px
  &__img
    margin-bottom 65px
    width: 100%
    @media $tablet
      margin-bottom 40px
    @media $phone
      margin-bottom 20px
    img
      width: 100%
  &__text 
    font-size: 18px
    line-height: 26px
    color: $baseFont
    margin-bottom 10px
    p
      padding-bottom 25px
      @media $phone
        padding-bottom 10px
  &__link
    a
      display: flex
      align-items: center
      font-weight: 300
      font-size: 14px
      line-height: 17px
      color: $linkFont
      img
        margin-right 10px
        margin-bottom -2px
