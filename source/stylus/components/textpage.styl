.b-text
	&:last-child
		padding-bottom: 75px
		@media $tablet
			padding-bottom: 35px
	h1
		font-family $MuseocyrM
		font-size 35px
		line-height 1.28
		padding: 40px 0 30px
		text-align center
		text-transform uppercase
		@media $phone
			font-size 28px
			padding: 30px 0 20px
	h2
		font-size 28px
		line-height 1.2
		margin 0 0 24px
		padding-top: 80px
		@media $phone
			padding-top: 60px
			margin 0 0 15px
			font-size 20px
	p, li
		font-size 16px
		line-height 1.5
		margin-top 24px
		@media $phone
			margin-top 15px
			font-size 14px
	ul
		list-style disc
	&__left-padding
		padding-left: 40px
		@media $phone
			padding-left: 30px
	.text_bold
		font-weight: 700

.b-content-links
	p
		margin-top 15px

