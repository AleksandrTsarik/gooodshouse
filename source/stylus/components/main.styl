.main-actions
	&__list
		display: flex
		flex-wrap: wrap
		justify-content: space-between
		@media $phone
			flex-wrap: nowrap
			overflow-y: scroll
			margin: 0 -15px
			padding-left: 15px
	&__item
		width: calc(50% - 10px)
		margin-bottom: 20px
		@media $phone
			margin-bottom: 15px
			min-width: 260px
			padding-right: 15px
	&__main
		@media $phone
			margin: 0 -15px
		.promo-link
			&__b-text
				@media $phone
					max-width: 100%
			&__img
				@media $phone
					padding-top: 130%
	
.main-recipies
	display: flex
	justify-content: space-between
	@media $phone
		overflow-y: scroll
		margin: 0 -15px
		padding-left: 15px
	&__item
		width: calc(33.3333% - 13.3333px)
		@media $phone
			min-width: 260px
			padding-right: 15px