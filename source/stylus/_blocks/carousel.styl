.b-carousel
	background $backBackground
	&__wrapper
		@media $phone
			height auto
	&__slide
		position relative
		font-size 0
		line-height 1
	&__slide-back
		position relative
	&__slide-wrapper
		position absolute
		left 0
		right 0
		top calc(50% - 25px)
		bottom 0
		z-index 3
		width: 100%
		height: 370px
		transform: translateY(-50%)
		@media $desktop
			height: 350px
			top calc(50% - 20px)
		@media $tablet
			top calc(50% - 10px)
			height: 240px
		@media $phone
			position relative
			top 0
			left 0
			transform: none
			height: 265px;
	&__img
		width 50vw
		padding-top: 38vw
		margin-left: 50vw
		background-position: center
		background-size: cover
		background-repeat: no-repeat
		@media $phone
			width 100vw
			padding-top: 76vw
			margin-left: 0
	&__title
		font-size 52px /*52*/
		line-height 1.2
		padding-bottom 26px
		font-weight: 600
		@media $desktop
			padding-bottom 15px
		@media $tablet
			font-size 35px
			padding-bottom 17px
		@media $phone
			font-size: 25px;
			padding-bottom: 10px;
	&__desc
		font-size 16px
		line-height 24px
		max-width 465px
		@media $tablet
			font-size 14px
			line-height 1.43
			max-height 63px
			overflow hidden
			max-width none
	&__button
		margin-top: auto
		height: 40px
		width: 160px
	&__layout
		display flex
		flex-direction column
		align-items flex-start
		height 100%
		width: 50%
		padding: 20px 20px 20px 0
		@media $phone
			width: 100%
			padding: 20px 0 70px;
	.slick-dots
		position absolute
		top calc(50% + 170px)
		left 50%
		transform translateX(-50%)
		max-width 1328px
		width 100%
		padding 0 40px
		display flex
		@media $desktop
			top calc(50% + 150px)
		@media $tablet
			top calc(50% + 100px)
			padding 0 20px
		@media $phone
			left 0
			padding 0 15px
			transform translateX(0)
			width auto
			top auto
			bottom 26px
	.slick-dots button
		font-size 0
		width 10px
		height 10px
		background $baseFont
		opacity: 0.3
		border-radius: 50%
		margin-right: 10px
	.slick-dots .slick-active button
		opacity 1



