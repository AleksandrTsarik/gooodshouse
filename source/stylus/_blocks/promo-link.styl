.promo-link
	display: block
	&__wrapper
		position relative
	&__b-hover
		opacity: 0
		position: absolute
		top 0
		left 0
		width: 100%
		height: 100%
		background: rgba(0,0,0,0.6)
		justify-content: center
		align-items: center
		font-size: 20px
		line-height: 24px
		font-weight: 500
		color #fff
		transition: opacity 0.1s linear
		display: flex
		@media $phone
			display: none
	&:hover &__b-hover
		opacity 1
	&__img
		background-position: center
		background-repeat: no-repeat
		background-size: cover
		padding-top: 65.15%
		@media $phone
			padding-top: 100%
	&__img--square
		padding-top: 100%
	&__b-text
		position: absolute
		left 0
		top 40px
		max-width: 415px
		background: rgba(143, 175, 215, 0.8)
		color $white
		padding: 10px 15px
		font-size: 16px
		@media $phone
			font-size: 14px
			top: 26px;
			max-width: 215px;
	&__title
		line-height: 22px
		font-weight: 600
	&__title + &__text
		margin-top: 5px
	&__text
		line-height: 20px

