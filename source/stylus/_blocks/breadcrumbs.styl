.b-breadcrumbs
	&__wrapper
		padding 11px 0
		display flex
		flex-wrap wrap
	&__item
		position relative
		font-size 10px
		line-height 21px
		text-transform uppercase
		color rgba(115,100,92,0.6)
		padding-right 12px
		margin-right 10px
		&:after
			content ''
			position absolute
			right -5px
			top 10px
			width 10px
			height 1px
			font-size 10px
			line-height 12px
			background rgba(115,100,92,0.6)
			transform rotate(-50deg)
		&:last-child
			padding-right 0
			margin-right 0
			&:after
				display none
	&__item a
		color rgba(115,100,92,0.6)
	&__item:hover a
		color $hoverFont

